{% extends 'base.html.twig' %}

{% block title %}Vote Secretaire{% endblock %}

{% block body %}
<h1 class="text-3xl text-center " style="color: #9f4c22;">Vote du <span class="font-bold">secrétaire général(e) de l’AP-PNUDM</span></h1>

<div class="flex justify-end hjy self-center w-full">
    <button onclick="handleRadioSelection()"
        class="py-2 px-4 bg-blue-500 buu text-white rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" style="background-color: #9f4c22;color: #fff;">
        Suivant
    </button>
</div>
<form action="{{ path('vote_secretaire_vote', {id: user.id}) }}" method="post" class="flex flex-col justify-center">
    <div id="popup" class="fixed inset-0 bg-gray-500 bg-opacity-50 flex items-center justify-center hidden">
        <div class="bg-white p-6 rounded shadow-lg max-w-sm w-full">
            <h2 class="text-xl mb-4">Validez votre choix ?</h2>
            <p id="presidentName" class="mb-4">Président : </p>
            <div class="flex justify-around">
                <button type="submit" id="yesBtn" class="px-4 py-2 text-white rounded" style="background-color: #9f4c22;">Oui</button>
                <button id="noBtn" class="px-4 py-2 bg-red-500 text-white rounded" style="background-color: #9f4c22;">Non</button>
            </div>
        </div>
    </div>
    <div class="max-w-screen-xl m-0 sm:m-6 bg-white shadow try flex  flex-1 self-center w-full shadow-xl">
        <div class="max-w-xl  bg-white p-8  rounded-lg">
            <h1 class="yui" style="color: #9f4c22;">Sélectionnez votre candidat puis, cliquez sur suivant.</h1>
            <div class="space-y-4">
                <div class="flex items-center">
                    <span class="circle"
                        style="background-image: url(../../s1.png);background-position: center;object-fit: cover;background-size: cover;"></span>
                    <label for="MathieuCoulibaly" class="ml-2 text-lg lab" style="background-color: #9f4c22;color: #fff;">Mathieu Coulibaly</label>
                    <input type="radio" id="MathieuCoulibaly" name="vote" value="MathieuCoulibaly"
                        class="h-5 w-5 text-red-900 ip" />

                </div>
            </div>
            <div class="space-y-4 mt-4">
                <div class="flex items-center">
                    <span class="circle"
                        style="background-image: url(../../s2.png);background-position: center;object-fit: cover;background-size: cover;"></span>
                    <label for="SidiDiawara" class="ml-2 text-lg lab" style="background-color: #9f4c22;color: #fff;">Sidi Diawara</label>
                    <input type="radio" id="SidiDiawara" name="vote" value="SidiDiawara"
                        class="h-5 w-5 text-red-900 ip" />

                </div>
            </div>
            <div class="space-y-4 mt-4">
                <div class="flex items-center">
                    <span class="circle"
                        style="background-color: white;background-position: center;object-fit: cover;background-size: cover;"></span>
                    <label for="candidate1" class="ml-2 text-lg lab" style="background-color: #9f4c22;color: #fff;">Vote Blanc</label>
                    <input type="radio" id="voteBlanc" name="vote" value="VoteBlanc" class="h-5 w-5 text-red-900 ip" />

                </div>
            </div>
        </div>
    </div>
</form>
    <div class="flex justify-between hjy self-center w-full">
        <span class="text-white pr-8">Votant : {{ user.loginemail }}</span>
        <button onclick="handleRadioSelection()"
            class="py-2 px-4 bg-blue-500 buu text-white rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500" style="background-color: #9f4c22;color: #fff;">
            Suivant
        </button>
    </div>

<script>
    function handleRadioSelection() {
        // Récupère tous les inputs radio avec le nom "president"
        const radios = document.querySelectorAll('input[name="vote"]');
        let selectedValue = null;

        // Vérifie si un radio est sélectionné
        radios.forEach(radio => {
            if (radio.checked) {
                selectedValue = radio.value;
            }
        });

        // Si aucun n'est sélectionné, affiche une alerte
        if (!selectedValue) {
            alert("Sélectionnez une option SVP !");
            return;
        }

        // Sinon, affiche la pop-up
        showPopup(selectedValue);
    }

    function showPopup(selectedValue) {
        // Récupère la pop-up et le texte du président
        const popup = document.getElementById('popup');
        const presidentName = document.getElementById('presidentName');

        // Met à jour le texte du président dans la pop-up
        presidentName.textContent = "Président : " + selectedValue;

        // Affiche la pop-up
        popup.classList.remove('hidden');

        // Ajoute un événement au bouton "Oui" pour fermer la pop-up
        document.getElementById('yesBtn').addEventListener('click', () => {
            alert("Votre choix a été validé !");
            popup.classList.add('hidden'); // Ferme la pop-up
        });

        // Ajoute un événement au bouton "Non" pour fermer la pop-up
        document.getElementById('noBtn').addEventListener('click', (e) => {
            e.preventDefault()
            popup.classList.add('hidden'); // Ferme la pop-up
        });
    }

</script>
{% endblock %}